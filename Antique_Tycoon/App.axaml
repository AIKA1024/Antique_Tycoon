<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Antique_Tycoon.App"
             RequestedThemeVariant="Dark">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <MergeResourceInclude Source="/Views/DataTemplates/AllPageDataTemplate.axaml" />
        <MergeResourceInclude Source="Themes/Colors.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
  
  <Application.Styles>
    <FluentTheme />
  </Application.Styles>
  <Application.Styles>
    <StyleInclude Source="Views/Controls/MCButton.axaml" />
    <StyleInclude Source="Views/Controls/MCTitleBar.axaml" />
    <StyleInclude Source="Views/Controls/MCContentControl.axaml" />
    <StyleInclude Source="Views/Controls/Connector.axaml" />
    <StyleInclude Source="Views/Controls/NodeLinkControl.axaml" />
    <StyleInclude Source="Views/Styles/TextBox.axaml" />
    <!-- <StyleInclude Source="Views/Styles/MenuFlyoutPresenter.axaml" /> -->
    <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
  </Application.Styles>

  
  <Application.DataTemplates>
    <!-- page -->
    <StaticResource ResourceKey="CreateRoomPageDataTemplate"/>
    <StaticResource ResourceKey="MapListPageDataTemplate"/>
    <StaticResource ResourceKey="GamePageDataTemplate"/>
    <StaticResource ResourceKey="HallPageDataTemplate"/>
    <StaticResource ResourceKey="StartPageDataTemplate"/>
    <StaticResource ResourceKey="RoomPageDataTemplate"/>
    <StaticResource ResourceKey="MapEditPageDataTemplate"/>
    
    <!-- Node -->
    <StaticResource ResourceKey="SpawnPointDataTemplate"/>
    <StaticResource ResourceKey="EstateDataTemplate"/>
    <StaticResource ResourceKey="MineDataTemplate"/>
    <StaticResource ResourceKey="AntiqueDataTemplate"/>
    
    <!-- Dialog -->
    <StaticResource ResourceKey="CreateNewMapDialogDataTemplate"/>
    <StaticResource ResourceKey="SelectMapDialogDataTemplate"/>
    <StaticResource ResourceKey="MessageDialogDataTemplate"/>
    <StaticResource ResourceKey="LockerRoomDialogDataTemplate"/>
  </Application.DataTemplates>
</Application>