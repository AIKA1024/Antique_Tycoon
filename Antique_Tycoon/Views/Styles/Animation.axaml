<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <Style Selector="ContentControl.CardAppear">
    <Setter Property="RenderTransform">
      <TransformGroup>
        <TranslateTransform />
        <ScaleTransform ScaleX="0" ScaleY="0" />
      </TransformGroup>
    </Setter>
    <Style.Animations>
      <Animation Duration="0:0:1" FillMode="Forward" Easing="QuarticEaseOut">
        <KeyFrame KeyTime="0">
          <Setter Property="TranslateTransform.Y" Value="200" />
          <Setter Property="ScaleTransform.ScaleX" Value="0" />
          <Setter Property="ScaleTransform.ScaleY" Value="0" />
        </KeyFrame>

        <KeyFrame KeyTime="0:0:0.3">
          <Setter Property="ScaleTransform.ScaleX" Value="0.5" />
          <Setter Property="Opacity" Value="1" />
        </KeyFrame>

        <KeyFrame KeyTime="0:0:0.6">
          <Setter Property="ScaleTransform.ScaleX" Value="0" />
        </KeyFrame>

        <KeyFrame KeyTime="0:0:1">
          <Setter Property="TranslateTransform.Y" Value="0" />
          <Setter Property="ScaleTransform.ScaleX" Value="1" />
          <Setter Property="ScaleTransform.ScaleY" Value="1" />
        </KeyFrame>
      </Animation>

      <Animation Duration="0:0:1.5"
                 Delay="0:0:1"
                 IterationCount="Infinite"
                 PlaybackDirection="Alternate">
        <Animation.Easing>
          <SineEaseInOut />
        </Animation.Easing>
        <KeyFrame KeyTime="0">
          <Setter Property="TranslateTransform.Y" Value="0" />
        </KeyFrame>
        <KeyFrame KeyTime="0:0:1.5">
          <Setter Property="TranslateTransform.Y" Value="-20" />
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>
</Styles>