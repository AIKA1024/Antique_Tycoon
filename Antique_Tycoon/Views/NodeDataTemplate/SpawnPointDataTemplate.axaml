<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:node="clr-namespace:Antique_Tycoon.Models.Node">
  <Design.PreviewWith>
    <ContentControl>
      <node:SpawnPoint />
    </ContentControl>
  </Design.PreviewWith>

  <DataTemplate x:Key="SpawnPointDataTemplate" x:DataType="node:SpawnPoint">
    <StackPanel>
      <TextBlock Text="{Binding Title}"
                 FontSize="16"
                 FontWeight="Black"
                 HorizontalAlignment="Center" />
      <TextBlock FontSize="8" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Text="{Binding Bonus,StringFormat=经过起点领取{0}元}" />
      <Image 
        Margin="0 16 0 0"
        Source="{Binding Cover}"
        Stretch="{Binding CoverStretch}"/>
    </StackPanel>
  </DataTemplate>
</ResourceDictionary>