<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="using:Antique_Tycoon.Models.Cell">
  <Design.PreviewWith>
    <ContentControl>
      <m:SpawnPoint />
    </ContentControl>
  </Design.PreviewWith>

  <DataTemplate x:Key="SpawnPointDataTemplate" x:DataType="m:SpawnPoint">
    <StackPanel>
      <TextBlock Text="{Binding Title}"
                 FontSize="16"
                 FontWeight="Black"
                 HorizontalAlignment="Center" />
      <TextBlock FontSize="8" Text="{Binding Bonus,StringFormat=经过起点领取{0}元}" />
      <Image Width="64"
             Margin="0 16 0 0"
             Source="../../Assets/Avatars/Minecraft.png" />
    </StackPanel>
  </DataTemplate>
</ResourceDictionary>