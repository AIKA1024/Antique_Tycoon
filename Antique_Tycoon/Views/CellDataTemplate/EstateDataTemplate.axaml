<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="using:Antique_Tycoon.Models">
  <Design.PreviewWith>
    <ContentControl>
      <m:Estate Title="平原"/>
    </ContentControl>
  </Design.PreviewWith>
  
  <DataTemplate x:Key="EstateDataTemplate" x:DataType="m:Estate">
    <StackPanel>
      <TextBlock Text="{Binding Title}"
                 FontSize="16"
                 FontWeight="Black"
                 HorizontalAlignment="Center" />
      <Image Width="64"
             Margin="0 16 0 0"
             Source="{Binding Cover}" />
    </StackPanel>
  </DataTemplate>
</ResourceDictionary>
