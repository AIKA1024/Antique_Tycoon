<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Antique_Tycoon.Views.Controls"
        xmlns:c="using:Antique_Tycoon.Views.Controls"
        xmlns:cv="clr-namespace:Antique_Tycoon.Converters"
        xmlns:node="clr-namespace:Antique_Tycoon.Models.Node">
  <Design.PreviewWith>
    <controls:NodeLinkControl />
  </Design.PreviewWith>

  <Style Selector="controls|NodeLinkControl" x:DataType="node:CanvasEntity">
    <Setter Property="Padding" Value="16" />
    <Setter Property="BorderThickness" Value="2" />
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="Background" Value="#ECCC68" />
    <Setter Property="Foreground" Value="Black" />
    <Setter Property="Template">
      <ControlTemplate x:DataType="node:CanvasEntity">
        <Panel
          TextElement.Foreground="{TemplateBinding Foreground}"
          Height="{Binding Height}"
          Width="{Binding Width}">
          <Border
            ClipToBounds="True"
            Background="{Binding Background,Converter={x:Static cv:SolidBrushAndColorConverter.ToSolidBrush}}"
            Padding="{TemplateBinding Padding}"
            CornerRadius="{TemplateBinding CornerRadius}"
            BorderThickness="{TemplateBinding BorderThickness}"
            BorderBrush="{TemplateBinding BorderBrush}">
            <ContentPresenter Content="{TemplateBinding Content}" />
          </Border>

          <c:Connector
            LineCanvas="{Binding RelativeSource={RelativeSource AncestorType=Canvas},Mode=OneWay}"
            HorizontalAlignment="Left" VerticalAlignment="Center" />
          <c:Connector
            LineCanvas="{Binding RelativeSource={RelativeSource AncestorType=Canvas},Mode=OneWay}"
            HorizontalAlignment="Center" VerticalAlignment="Top" />
          <c:Connector
            LineCanvas="{Binding RelativeSource={RelativeSource AncestorType=Canvas},Mode=OneWay}"
            HorizontalAlignment="Right" VerticalAlignment="Center" />
          <c:Connector
            LineCanvas="{Binding RelativeSource={RelativeSource AncestorType=Canvas},Mode=OneWay}"
            HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        </Panel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>