<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Antique_Tycoon.Views.Controls.PlayerCard"
             x:Name="Me"
             Foreground="Black">
  <UserControl.Styles>
    <Style Selector="UserControl:turn>Border">
      <Setter Property="Background" Value="HotPink"/>
    </Style>
  </UserControl.Styles>
  <Border CornerRadius="8" Background="#eccc68" Padding="32">
    <Grid ColumnDefinitions="Auto,*">
      <StackPanel>
        <Image Width="64" Source="../../Assets/Image/Avatar/Steve.png" HorizontalAlignment="Left" />
        <TextBlock Text="{Binding #Me.Player.Name}" HorizontalAlignment="Center"/>
      </StackPanel>
      <StackPanel Grid.Column="1" Margin="32 0 0 0">
        <TextBlock Text="{Binding #Me.Player.Money,StringFormat=现金:{0}}"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>