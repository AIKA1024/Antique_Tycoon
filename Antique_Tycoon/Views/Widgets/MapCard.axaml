<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Antique_Tycoon.ViewModels"
             xmlns:c="using:Antique_Tycoon.Views.Controls"
             xmlns:m="using:Antique_Tycoon.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Antique_Tycoon.Views.Widgets.MapCard">
  <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" x:DataType="m:Map">
    <StackPanel>
      <Image Source="{Binding Cover}" />
      <c:MCButton Content="{Binding Name}" />
    </StackPanel>
  </Border>
</UserControl>