<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Antique_Tycoon.ViewModels"
             xmlns:c="using:Antique_Tycoon.Views.Controls"
             xmlns:m="using:Antique_Tycoon.Models"
             xmlns:w="clr-namespace:Antique_Tycoon.Views.Widgets"
             mc:Ignorable="d"
             x:Class="Antique_Tycoon.Views.Widgets.MapCard">
  <UserControl.Styles>
    <Style Selector="w|MapCard>c|MCButton>StackPanel>Border>DockPanel">
      <Setter Property="LastChildFill" Value="False" />
    </Style>
  </UserControl.Styles>
  <c:MCButton x:DataType="m:Map" Padding="0" Click="Button_OnClick">
    <Grid RowDefinitions="4*,*">
      <Image Grid.Row="0" Source="{Binding Cover}" Stretch="Fill" />
      <Border Grid.Row="1" Padding="16">
        <TextBlock Text="{Binding Name}"
                   VerticalAlignment="Center" HorizontalAlignment="Center" />
      </Border>
    </Grid>
  </c:MCButton>
</UserControl>