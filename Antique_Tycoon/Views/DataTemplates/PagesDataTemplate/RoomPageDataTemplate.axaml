<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="using:Antique_Tycoon.Views.Controls"
                    xmlns:vm="using:Antique_Tycoon.ViewModels"
                    xmlns:pageViewModels="clr-namespace:Antique_Tycoon.ViewModels.PageViewModels">
  <Design.PreviewWith>
    <ContentControl>
      <pageViewModels:RoomPageViewModel />
    </ContentControl>
  </Design.PreviewWith>

  <DataTemplate x:Key="RoomPageDataTemplate" DataType="pageViewModels:RoomPageViewModel">
    <Grid RowDefinitions="50,*" RowSpacing="8">
      <c:MCTitleBar Grid.Row="0" Title="xxx的房间" />
      <StackPanel Grid.Row="1" Spacing="16"
                  Margin="16"
                  VerticalAlignment="Stretch">
        <c:MCButton Classes="ore"
                    Content="开始游戏"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top" />
        <ItemsControl ItemsSource="{Binding Players}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border
                BorderThickness="2"
                BorderBrush="#131313">
                <StackPanel>
                  <Border BorderThickness="2" BorderBrush="{StaticResource LightedBorderBrush}" Padding="8">
                    <StackPanel>
                      <StackPanel Orientation="Horizontal" Spacing="32">
                        <Border BorderThickness="2" BorderBrush="#000000">
                          <Image
                            Width="64"
                            Height="64"
                            Source="{Binding Avatar}" />
                        </Border>
                        <TextBlock Text="{Binding Name}"
                                   VerticalAlignment="Center"
                                   Foreground="#FFFFFF"
                                   FontSize="24" />
                      </StackPanel>
                    </StackPanel>
                  </Border>
                  <Rectangle Fill="#313233" VerticalAlignment="Bottom" Height="4" />
                </StackPanel>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>

    </Grid>
  </DataTemplate>
</ResourceDictionary>