<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:node="clr-namespace:Antique_Tycoon.Models.Node"
                    xmlns:c="using:Antique_Tycoon.Views.Controls"
                    xmlns:vm="clr-namespace:Antique_Tycoon.ViewModels.PageViewModels">
  <Design.PreviewWith>
    <ContentControl>
      <node:Antique />
    </ContentControl>
  </Design.PreviewWith>

  <DataTemplate x:Key="AntiqueDataTemplate" x:DataType="node:Antique">
    <!-- Set Defaults -->

    <StackPanel>
      <TextBlock Text="{Binding Dice}"
                 HorizontalAlignment="Center"
                 Margin="0 -16 0 0" />
      <TextBlock Text="{Binding Name}"
                 HorizontalAlignment="Center"
                 Margin="0 -16 0 0" />

      <Image
        Margin="0 16 0 0"
        Source="{Binding Image}" />
      <TextBlock Text="{Binding Value}"
                 FontSize="16"
                 FontWeight="Black"
                 HorizontalAlignment="Center" />
    </StackPanel>
  </DataTemplate>
</ResourceDictionary>