<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Antique_Tycoon.Views.Controls"
                    xmlns:vm="clr-namespace:Antique_Tycoon.ViewModels.PageViewModels"
                    xmlns:i="clr-namespace:Antique_Tycoon.Behaviors"
                    xmlns:nodes="clr-namespace:Antique_Tycoon.Models.Nodes">
  <Design.PreviewWith>
    <ContentControl>
      <nodes:SpawnPoint />
    </ContentControl>
  </Design.PreviewWith>

  <DataTemplate x:Key="SpawnPointDataTemplate" x:DataType="nodes:SpawnPoint">
      <StackPanel>
        <TextBlock Text="{Binding Title}"
                   FontSize="16"
                   FontWeight="Black"
                   HorizontalAlignment="Center" />
        <TextBlock FontSize="8"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="{Binding Bonus,StringFormat=经过起点领取{0}元}" />
        <Image
          Margin="0 16 0 0"
          Source="{Binding Image}"
          Stretch="{Binding CoverStretch}" />
      </StackPanel>
  </DataTemplate>
</ResourceDictionary>