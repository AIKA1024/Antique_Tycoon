<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Antique_Tycoon.Views.Controls"
                    xmlns:nodes="clr-namespace:Antique_Tycoon.Models.Nodes">
  <!-- Add Resources Here -->
  <Design.PreviewWith>
    <ContentControl>
      <ContentControl.DataTemplates>
        <StaticResource ResourceKey="MineDetailDataTemplate" />
      </ContentControl.DataTemplates>
      <nodes:Mine />
    </ContentControl>
  </Design.PreviewWith>
  
  <DataTemplate x:Key="MineDetailDataTemplate" x:DataType="nodes:Mine">
    <StackPanel>
      <c:McContentControl Header="收费">
        <TextBox
          Classes="MCTextbox"
          Text="{Binding Charge}" />
      </c:McContentControl>
    </StackPanel>
  </DataTemplate>
  
</ResourceDictionary>