<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Antique_Tycoon.Views.Controls"
                    xmlns:node="clr-namespace:Antique_Tycoon.Models.Node">
  <!-- Add Resources Here -->
  <Design.PreviewWith>
    <ContentControl>
      <ContentControl.DataTemplates>
        <StaticResource ResourceKey="EstateDetailDataTemplate" />
      </ContentControl.DataTemplates>
      <node:Estate />
    </ContentControl>
  </Design.PreviewWith>
  
  <DataTemplate  x:Key="EstateDetailDataTemplate" x:DataType="node:Estate">
    <StackPanel>
      <c:MCContentControl Header="价格">
        <TextBox
          Classes="MCTextbox"
          Text="{Binding Value}" />
      </c:MCContentControl>
    </StackPanel>
  </DataTemplate>
  
</ResourceDictionary>
