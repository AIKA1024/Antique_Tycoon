<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pageViewModels="clr-namespace:Antique_Tycoon.ViewModels.PageViewModels"
                    xmlns:w="using:Antique_Tycoon.Views.Widgets"
                    xmlns:c="clr-namespace:Antique_Tycoon.Views.Controls">
  <Design.PreviewWith>
    <ContentControl>
      <pageViewModels:MapListPageViewModel />
    </ContentControl>
  </Design.PreviewWith>

  <DataTemplate x:Key="MapListPageDataTemplate" DataType="pageViewModels:MapListPageViewModel">
    <Grid RowDefinitions="50,*" RowSpacing="16">
      <c:MCTitleBar
        Title="地图列表" />

      <StackPanel Grid.Row="1" Spacing="16" Margin="16 0">
        <c:MCButton Classes="ore" Content="创建新地图" HorizontalAlignment="Right" />

        <ItemsControl ItemsSource="{Binding Maps}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <w:MapCard />
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>

    </Grid>

  </DataTemplate>
</ResourceDictionary>